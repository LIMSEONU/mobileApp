<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- 콘텐츠 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:text="제목 로딩 중..."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 콘텐츠 설명 -->
        <TextView
            android:id="@+id/textDescription"
            android:text="설명 로딩 중..."
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 포스터 이미지 -->
        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="260dp"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@drawable/image_poster_rounded" />

        <!-- 닉네임 입력 -->
        <EditText
            android:id="@+id/editNickname"
            android:hint="닉네임을 입력하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- 한 줄 리뷰 작성 -->
        <EditText
            android:id="@+id/editReview"
            android:hint="한 줄 리뷰를 입력하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/btnSubmitReview"
            android:text="리뷰 저장"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- 목록 보기 버튼 -->
        <Button
            android:id="@+id/btnViewReviews"
            android:text="📋 리뷰 목록 보기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_outline"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
